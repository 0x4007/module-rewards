{
  "name": "pr-analysis",
  "version": "1.0.0",
  "description": "GitHub PR comment analysis tool",
  "type": "module",
  "scripts": {
    "dev": "bun run build/dev.ts",
    "build": "bun run build/build.ts",
    "start": "bun run src/server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "knip": "knip",
    "example:bot-comment": "bun src/experimental/bot-comment-test.ts",
    "example:slash-command": "bun src/experimental/slash-command-test.ts"
  },
  "devDependencies": {
    "bun-types": "latest",
    "knip": "5.46.0",
    "prettier": "3.5.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/ws": "^8.18.0",
    "marked": "^9.0.0",
    "text-readability": "^1.1.1",
    "ws": "^8.18.1"
  }
}
